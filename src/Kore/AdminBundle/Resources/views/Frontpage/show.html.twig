{% extends 'KoreAdminBundle:Base:base.html.twig' %}
{% use 'KoreAdminBundle:Base:navbar.html.twig' %}
{% use 'KoreAdminBundle:Base:sidebar.html.twig' %}
{% use 'KoreAdminBundle:Base:icons.html.twig' %}
{% use 'KoreAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAdminBundle' %}

{% block title %}{{ 'frontpage.show.title'|trans({'%id%':frontpage.id}) }}{% endblock %}

{% block body %}
    
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'frontpage.show.title'|trans({'%id%':frontpage.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_frontpage_index') }}">{{ icon('list') }}&nbsp;{{ 'frontpage.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_frontpage_edit', { 'id': frontpage.id }) }}">{{ icon('edit') }}&nbsp;{{ 'frontpage.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'frontpage.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'frontpage.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl>
                            <dt>{{ 'frontpage.form.id'|trans }}</dt>
                                <dd>{% if frontpage.id %}{{ frontpage.id }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.name'|trans }}</dt>
                                <dd>{% if frontpage.name %}{{ frontpage.name }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.title'|trans }}</dt>
                                <dd>{% if frontpage.title %}{{ frontpage.title }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.subtitle'|trans }}</dt>
                                <dd>{% if frontpage.subtitle %}{{ frontpage.subtitle }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.about'|trans }}</dt>
                                <dd>{% if frontpage.about %}{{ frontpage.about }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.subabout'|trans }}</dt>
                                <dd>{% if frontpage.subabout %}{{ frontpage.subabout }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.service'|trans }}</dt>
                                <dd>{% if frontpage.service %}{{ frontpage.service }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.subservice'|trans }}</dt>
                                <dd>{% if frontpage.subservice %}{{ frontpage.subservice }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.calltoaction'|trans }}</dt>
                                <dd>{% if frontpage.calltoaction %}{{ frontpage.calltoaction }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.contact'|trans }}</dt>
                                <dd>{% if frontpage.contact %}{{ frontpage.contact }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.createdAt'|trans }}</dt>
                                <dd>{% if frontpage.createdAt %}{{ frontpage.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.updatedAt'|trans }}</dt>
                                <dd>{% if frontpage.updatedAt %}{{ frontpage.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        
        
        

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'frontpage.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'frontpage.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'frontpage.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

