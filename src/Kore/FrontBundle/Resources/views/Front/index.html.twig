{% extends 'KoreFrontBundle:Front:base.html.twig' %}
{% use 'KoreFrontBundle:Front:navbar.html.twig' %}
{% use 'KoreFrontBundle:Front:header.html.twig' %}
{% use 'KoreFrontBundle:Front:about.html.twig' %}
{% use 'KoreFrontBundle:Front:store-description.html.twig' %}
{% use 'KoreFrontBundle:Front:brands.html.twig' %}
{% use 'KoreFrontBundle:Front:contact-info.html.twig' %}
{% use 'KoreFrontBundle:Front:footer.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% block navbar %}{{ parent() }}{% endblock %}
    {% block header %}{{ parent() }}{% endblock %}
    {% block about %}{{ parent() }}{% endblock %}
    {% block storedescription %}{{ parent() }}{% endblock %}
    {% block brands %}{{ parent() }}{% endblock %}  
    {% block contactinfo %}{{ parent() }}{% endblock %}     
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}

{% block javascript %}
    <script>
        //Slick
        $('.brands').slick({
            slidesToShow: 5,
            slidesToScroll: 1,
            autoplay: true,
            arrows: false,
            autoplaySpeed: 2000,
            responsive: [
            {
                breakpoint: 768,
                settings: {
                    slidesToShow: 2,
                }
            },
            ]
        });

        $(function(){
            $('.site-header-inicio').backstretch([
                "{{ asset('images/home-slide-1.jpg') }}",
                "{{ asset('images/home-slide-2.jpg') }}",
                ],
                { duration: 4500, fade: 2000 }
            );
        });
    </script>
{% endblock %}
